modal {

    &-auto {

        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        left:0;
        width: 100vw;
        height: 100vh;
        z-index:500;

        & > section {

            display: flex;
            flex-direction: column;
            overflow: hidden;

            max-width: 80vw;
            max-height: 80vh;

            @media $small {
                margin-top: 10vh;
                width: 100vw;
                height: 90vh;
                max-width: 100vw;
                max-height: 90vh;
            }

            header {
                flex: 0 0 3rem;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 0 2rem;

                & > *:first-child {
                    flex: 12;
                    font-size: 1rem;
                }

                & > *:last-child {
                    flex: 1;
                    text-align: right;
                }
            }

            section.body {

                flex: 1;
                display: block;
                padding: 2rem;
                min-width: 40vw;
                max-width: 90vw;
                max-height: 90vh;
                overflow-y: auto;
                text-align: left;

                @media $small {
                    width: 100%;
                    max-width: 100% !important;
                    height auto;
                    min-height:10vh;
                    max-height:90vh;
                    overflow-y: auto;
                }

            }

        }

        &.modal-auto-small {

            & > section {
                width: 40vw;
                height: auto;
                min-height: 40vh;
                max-height: 90vh;

                @media $small {
                    width: 90vw;
                    height: auto;
                    min-height: 50vh;
                    max-height: 90vh;
                }
            }
        }

        &.modal-auto-medium {

            & > section {
                width: 60vw;
                height: auto;
                min-height: 60vh;
                max-height: 90vh;

                @media $medium {
                    width: 80vw;
                }

                @media $small {
                    width: 100vw;
                    height: auto;
                    min-height: 60vh;
                    max-height: 90vh;
                }
            }
        }

        &.modal-auto-large {

            & > section {
                width: 80vw;
                height: auto;
                min-height: 80vh;
                max-height: 90vh;

                @media $small {
                    margin-top: 5vh;
                    width: 100vw;
                    height: 95vh;
                    max-width: 100vw;
                    max-height: 95vh;
                }
            }
        }

    }

    &-expanded {

        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        position: fixed;
        top: 0;
        left:0;
        width: 100vw;
        height: 100vh;
        z-index:500;
        justify-content: flex-end;

        .modal-body {
            width: 100vw;
            height: calc(100vh - 3.750em);
        }

    }

}
